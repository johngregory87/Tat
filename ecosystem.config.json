{
  "apps": [
    {
      "name": "keepalive",
      "interpreter": "python",
      "script": "pm2_keepalive.py",
      "autorestart": true,
      "exec_mode": "fork",
      "instances": 1
    },
    {
      "name": "tauticord",
      "interpreter": "python",
      "script": "run.py",
      "autorestart": true,
      // Auto restart on config change
      "watch": ["/config"],
      "watch_delay": 1000,
      "exec_mode": "fork",
      "instances": 1,
      // 101 - Discord login failed
      // 201 - GitHub CI Docker kill switch
      "stop_exit_codes": [101, 201]
    }
  ]
}
