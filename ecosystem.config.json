{
  "apps": [
    {
      "name": "keepalive",
      "interpreter": "/app/venv/bin/python",
      "script": "pm2_keepalive.py",
      "autorestart": true,
      "exec_mode": "fork",
      "instances": 1
    },
    {
      "name": "tauticord",
      "interpreter": "/app/venv/bin/python",
      "script": "run.py",
      "autorestart": true,
      // Auto restart on config change
      "watch": ["/config/config.yaml"],
      "watch_delay": 1000,
      "exec_mode": "fork",
      "instances": 1,
      // 101 - Discord login failed
      "stop_exit_codes": [101]
    }
  ]
}
